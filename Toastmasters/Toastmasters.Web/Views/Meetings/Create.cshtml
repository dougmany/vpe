@model Toastmasters.Web.Models.MeetingActionModel

@using Toastmasters.Web.Models;

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<form asp-action="Create">
    <h4>Meeting</h4>
    <hr />
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MeetingID" />
        <div class="col-md-3">
            <label asp-for="MeetingDate" class=" control-label"></label>
            <input asp-for="MeetingDate" class="form-control" type="date" />
            <span asp-validation-for="MeetingDate" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label asp-for="ToastmasterMemberID" class="control-label"></label>
            <select asp-for="ToastmasterMemberID" class="form-control" asp-items="Model.Members"></select>
        </div>
        <div class="col-md-3">
            <label asp-for="TableTopicsMemberID" class="control-label"></label>
            <select asp-for="TableTopicsMemberID" class="form-control" asp-items="Model.Members"></select>
        </div>
        <div class="col-md-3">
            <label asp-for="SpeakerIMemberID" class="control-label"></label>
            <select asp-for="SpeakerIMemberID" class="form-control" asp-items="Model.Members"></select>
        </div>
