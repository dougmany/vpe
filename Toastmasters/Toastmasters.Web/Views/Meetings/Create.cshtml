        </div>
        <div class="col-md-3">
            <p class="form-control-static">@Html.Raw(Model.Histories[MeetingRoleNames.Timer].HtmlList)</p>
        </div>
        <div class="col-md-3">
            <p class="form-control-static">@Html.Raw(Model.Histories[MeetingRoleNames.Inspirational].HtmlList)</p>
        </div>
