            <label asp-for="SpeakerIIMemberID" class="control-label"></label>
            <select asp-for="SpeakerIIMemberID" class="form-control" asp-items="Model.Members"></select>
        </div>
    </div>
    <a onclick="if ($(this).html() == '-') { $(this).next().hide(); $(this).text('+'); } else{ $(this).next().show(); $(this).text('-'); }" class="btn btn-default">-</a>
    <div id="firstHistory" class="row">
        <div class="col-md-3">
            <p class="form-control-static">@Html.Raw(Model.Histories[MeetingRoleNames.Toastmaster].HtmlList)</p>
        </div>
        <div class="col-md-3">
            <p class="form-control-static">@Html.Raw(Model.Histories[MeetingRoleNames.Tabletopics].HtmlList)</p>
        </div>
        <div class="col-md-3">
            <p class="form-control-static">@Html.Raw(Model.Histories[MeetingRoleNames.Speaker].HtmlList)</p>
        </div>
        <div class="col-md-3">
            <p class="form-control-static">@Html.Raw(Model.Histories[MeetingRoleNames.Speaker].HtmlList)</p>

        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label asp-for="GeneralEvaluatorMemberID" class="control-label"></label>
            <select asp-for="GeneralEvaluatorMemberID" class="form-control" asp-items="Model.Members"></select>
        </div>
        <div class="col-md-3">
            <label asp-for="EvaluatorIMemberID" class="control-label"></label>
            <select asp-for="EvaluatorIMemberID" class="form-control" asp-items="Model.Members"></select>
