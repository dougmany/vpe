@model IEnumerable<Toastmasters.Web.Models.MemberMeetingRole>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Meeting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Signoff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetingRole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Meeting)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Signoff)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MeetingRole.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Member.FullName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MemberMeetingRoleID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MemberMeetingRoleID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MemberMeetingRoleID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
